<%= form_for(@photo, html: { multipart: true }) do |f| %>
<% if @photo.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

  <ul>
    <% @photo.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title, required: true%>
</div>
<div class="field">
  <%= f.label :picture %><br>
  <%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png', required: true, style: "display: none" %>
  <button id="qwe">FILE</button>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
<img id="preview" src="#" alt="Preview" />
<div>
<div ondragover="allowDrop(event)" ondrop="previewPic(event)" id="drop_picture" style="text-align: center; line-height: 100px; overflow: hidden; width: 160px; height: 100px; border:2px dashed gray;">Drop picture here.</div>
</div>
<div class="actions">
  <input type="button" id="upload" value="Upload">
</div>
<script type="text/javascript">
  $('#photo_picture').bind('change', function(){
    var file = this.files[0];
    var size_in_megabytes = file.size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
    var reader = new FileReader();
    reader.onload = function(e){
      $('#preview').attr('src', e.target.result);
    }
    reader.readAsDataURL(file);
  });

  $('#new_photo').submit(function(){
    var formdata=new FormData(this);
    $.ajax({
      type: 'POST',
      url: '/photos',
      data: formdata,
      contentType: false,
      processData: false,
      success: function(result){
        location.href = "/photos";
      }
    });
    return false;
  });

  function allowDrop(e){
    e.preventDefault();
  };

  function previewPic(e){
    e.preventDefault();
    var fileList = e.dataTransfer.files;
    if(fileList.length == 0){
      return false;
    }
    if(fileList[0].type.indexOf('image') === -1){
      alert("It's not a picture!");
      return false;
    }
    file = fileList[0];
    var reader = new FileReader();
    reader.onload = function(e){
      $('#preview').attr('src', e.target.result);
    }
    reader.readAsDataURL(file);
  };

  $('#upload').bind('click', function(event) {
    var formdata=new FormData();
    formdata.append('photo[title]', "tttt");
    formdata.append('photo[picture]', file);
    $.ajax({
      type: 'POST',
      url: '/photos',
      data: formdata,
      contentType: false,
      processData: false,
      success: function(result){
        alert(result);
      }
    });
  });

  $('#qwe').click(function(event) {
    $('#photo_picture').click();
  });

